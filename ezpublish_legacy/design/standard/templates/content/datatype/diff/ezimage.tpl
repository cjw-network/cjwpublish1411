{* DO NOT EDIT THIS FILE! Use an override template instead. *}
{def $state=array( 'old', 'new' )
     $counter=0}
{foreach array( $diff.old_content, $diff.new_content ) as $attr}
    <div class="attribute-view-diff-{$state[$counter]}">
    {set $counter=inc( $counter )}
    <label>{'Image version %ver'|i18n( 'design/standard/content/datatype',, hash( '%ver', $attr.version ) )}:</label>
    {if $attr.content.original.is_valid}
        <table class="list" cellspacing="0">
        <tr>
            <th class="tight">{'Preview'|i18n( 'design/standard/content/datatype' )}</th>
            <th>{'Filename'|i18n( 'design/standard/content/datatype' )}</th>
            <th>{'MIME type'|i18n( 'design/standard/content/datatype' )}</th>
            <th>{'Size'|i18n( 'design/standard/content/datatype' )}</th>
        </tr>
        <tr>
            <td>{attribute_view_gui image_class=small attribute=$attr}</td>
            <td>{$attr.content.original.original_filename|wash( xhtml )}</td>
            <td>{$attr.content.original.mime_type|wash( xhtml )}</td>
            <td>{$attr.content.original.filesize|si( byte )}</td>
        </tr>
        </table>
        <label>{'Alternative image text'|i18n( 'design/standard/content/datatype' )}:</label>
        <p>{$attr.content.alternative_text|wash( xhtml )}</p>
    {else}
        <p>{'There is no image file.'|i18n( 'design/standard/content/datatype' )}</p>
    {/if}
    </div>
{/foreach}
