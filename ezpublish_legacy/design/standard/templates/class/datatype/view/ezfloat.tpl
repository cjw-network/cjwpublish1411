{* Both min and max values are set. *}
{case match=3}
<div class="block">
    <div class="element">
        <label>{'Min float value'|i18n( 'design/standard/class/datatype' )}:</label>
        <p>{$class_attribute.data_float1}</p>
    </div>

    <div class="element">
        <label>{'Max float value'|i18n( 'design/standard/class/datatype' )}:</label>
        <p>{$class_attribute.data_float2}</p>
    </div>

    <div class="break"></div>
</div>
{/case}

{* None of the values are set. *}
{case}
<div class="block">
    <div class="element">
        <label>{'Min float value'|i18n( 'design/standard/class/datatype' )}:</label>
        <p><i>{'Empty'|i18n( 'design/standard/class/datatype' )}</i></p>
    </div>

    <div class="element">
