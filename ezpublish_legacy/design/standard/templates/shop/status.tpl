{* DO NOT EDIT THIS FILE! Use an override template instead. *}
<form action={"shop/status"|ezurl} method="post" name="OrderStatus">

<h1>{"Order status"|i18n("design/standard/shop")}</h1>
<table class="list" width="100%" cellspacing="0" cellpadding="0">
<tr>
    <th>{"ID"|i18n("design/standard/shop")}</th>
    <th>{"Name"|i18n("design/standard/shop")}</th>
    <th>{"Active"|i18n("design/standard/shop")}</th>
    <th></th>
</tr>
{section var="Orderstatus" loop=$orderstatus_array sequence=array(bglight,bgdark)}
<tr class="{$:sequence}">
    <td>
        {$Orderstatus.item.status_id}
    </td>
    <td>
        <input type="text" name="orderstatus_name_{$Orderstatus.item.id}" value="{$Orderstatus.item.name|wash}" size="24" />
    </td>
    <td>
        {if $Orderstatus.item.is_active}{'Is active'|i18n( 'design/standard/shop' )}{else}{'Is inactive'|i18n( 'design/standard/shop' )}{/if}
    </td>
    <td width="1">
        <input type="checkbox" name="orderStatusIDList[]" value="{$Orderstatus.item.id}" {if $Orderstatus.item.is_internal}disabled="disabled"{/if} />
    </td>
</tr>
{/section}
</table>

<div class="buttonblock">
    {include uri="design:gui/button.tpl" name=neworderstatus id_name=AddOrderStatusButton value="New"|i18n("design/standard/shop")}
    {include uri="design:gui/button.tpl" name=removeorderstatus id_name=RemoveOrderStatusButton value="Remove"|i18n("design/standard/shop")}
</div>

<br/>
{include uri="design:gui/defaultbutton.tpl" name=saveorderstatus id_name=SaveOrderStatusButton value="Store"|i18n("design/standard/shop")}

</form>