{#{% extends site_bundle_name ~ '::pagelayout.html.twig' %}#}

<!DOCTYPE html>

<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    </head>
    <body>
    {#{% block content %}#}
        <div>
            <h1>{{ 'cjw_publishtools.exception_listener.page_not_available.heading'|trans }}</h1>
            <p>{{ 'cjw_publishtools.exception_listener.page_not_available.text'|trans }}</p>
            <p>{{ 'cjw_publishtools.exception_listener.page_not_available.additional_text'|trans }}</p>

            {# Only show exception message and error code, if not in *prod* environment #}
            {% if app.environment != 'prod' %}
                <br/>
                <p>{{ exception.message }} ({{ exception.code }})</p>
            {% endif %}
        </div>
    {#{% endblock %}#}
    </body>
</html>