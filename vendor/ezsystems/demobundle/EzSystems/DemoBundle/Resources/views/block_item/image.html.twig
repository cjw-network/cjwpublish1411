{% set image_alias = image_alias|default( "contentgrid" ) %}
<!-- BOX CONTENT: START -->
<figure class="attribute-image">
    {{ ez_render_field(
            content,
            "image",
            {
                "template": "eZDemoBundle:fields:ezimage_simple.html.twig",
                "parameters": {"alias": image_alias}
            }
        ) }}
    <figcaption class="attribute-caption">
    {% if not ez_is_field_empty( content, "caption" ) %}
        {{ ez_render_field( content, "caption" ) }}
    {% endif %}
        <h3><a href="{{ path( location ) }}">{{ ez_content_name( content ) }}</a></h3>
    </figcaption>
</figure>
<!-- BOX CONTENT: END -->
