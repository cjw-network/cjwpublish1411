<script>
    _V_.options.flash.swf = "{{ asset( "bundles/ezdemo/flash/video-js.swf" ) }}";
</script>

<article>
    <div class="attribute-video">
        {# Rendering video file using dedicated template (see Resources/views/fields/ezbinaryfile_video.html.twig). #}
        {# Attributes are also passed so that they can complement those present on generated <video> tag #}
        {{ ez_render_field(
            content,
            "file",
            {
                "attr": {"id": "video_" ~ block_id|default( "" ), "class": "video-js vjs-default-skin", "data-setup": "{}"},
                "template": "eZDemoBundle:fields:ezbinaryfile_video.html.twig"
            }
        ) }}
    </div>

    <div class="attribute-header">
        <h3>{{ ez_content_name( content ) }}</h3>
    </div>

    <div class="attribute-short">
        {{ ez_render_field( content, "caption" ) }}
    </div>
</article>
