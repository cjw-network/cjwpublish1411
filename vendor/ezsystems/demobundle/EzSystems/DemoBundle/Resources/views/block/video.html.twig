<div class="block-type-video">
    {% if block.name != "" %}
    <div class="attribute-header">
        <h2>{{ block.name }}</h2>
    </div>
    {% endif %}
    {{ render(
        controller(
            "ez_content:viewLocation",
            {
                "locationId": valid_items[0].locationId,
                "viewType": "block_item",
                "params": {"block_id": block.id, "block_name": block.name}
            }
        )
    ) }}
</div>
