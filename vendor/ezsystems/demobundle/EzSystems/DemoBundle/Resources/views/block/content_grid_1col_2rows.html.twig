<div class="block-type-content-grid block-view-{{ block.view }}">

{% if block.name != '' %}
    <div class="attribute-header">
        <h2>{{ block.name }}</h2>
    </div>
{% endif %}

    {# Each item can be also be rendered by legacy. #}
    {# This is the case for "product" contentType for which view is rendered by ezpublish_legacy/extension/ezdemo/design/ezdemo/override/templates/block_item/product.tpl #}
    {% for item in valid_items %}
        {{ render(
            controller(
                "ez_content:viewLocation",
                {
                    "locationId": item.locationId,
                    "viewType": "block_item",
                    "params": {"image_class": "contentgrid"}
                }
            )
        ) }}
    {% endfor %}

</div>
