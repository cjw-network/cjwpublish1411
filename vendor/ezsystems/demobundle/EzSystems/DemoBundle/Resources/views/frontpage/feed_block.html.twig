{# Rendering feed as HTML. #}
{# feed variable is an ezcFeed object. See http://zetacomponents.org/documentation/trunk/Feed/tutorial.html#step-2-read-the-feed-elements #}
<div class="block-type-feed-reader item-list">
    <div class="attribute-header">
        <h2>
        {% if feed.link is not empty %}
            <a href="{{ feed.link[0].href }}" title="{{ feed.title }}">{{ feed.title }}</a>
        {% else %}
            {{ feed.title }}
        {% endif %}
        </h2>
    </div>
    <article>
        <ul>
        {# Iterating on a slice of items. #}
        {# See http://twig.sensiolabs.org/doc/filters/slice.html #}
        {% for item in feed.item[offset:limit] %}
            <li>
                <a href="{{ item.link[0].href }}" title="{{ item.title }}">{{ item.title }}</a>
            </li>
        {% endfor %}
        </ul>
    </article>
</div>
