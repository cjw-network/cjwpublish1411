{% set image_alias = image_alias|default( "campaign" ) %}
{% set content_name = ez_content_name( content ) %}
<!-- BOX CONTENT: START -->
<figure class="attribute-image">
    {# Render the "image" field, overriding the field template to have a simpler rendering. #}
    {{ ez_render_field(
        content,
        "image",
        {
            "template": "eZDemoBundle:fields:ezimage_simple.html.twig",
            "parameters": {"alias": image_alias, "alt": content_name}
        }
    ) }}
    <figcaption class="attribute-caption">
    {% if not ez_is_field_empty( content, "intro" ) %}
        {{ ez_render_field( content, "intro" ) }}
    {% endif %}
        <h3><a href={{ path( location ) }}>{{ content_name }}</a></h3>
    </figcaption>
</figure>
<!-- BOX CONTENT: END -->
